{

  "manifest_version": 2,
  "name": "Remainder",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*" , "*://*.youtube.com/*"],
      "js": ["action.js"]
    }
  ]

}

